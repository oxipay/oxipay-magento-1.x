<?xml version="1.0"?>
<config>

    <!-- Module Metadata -->
    <modules>
        <Oxipay_Oxipayments>
            <version>0.3.1</version>
        </Oxipay_Oxipayments>
    </modules>
    <!-- End Module Metadata -->

    <!-- Dependency Injection Configuration -->
    <global>
        <!-- <module root>/Helper/Data.php -->
        <helpers>
            <oxipayments>
                <class>Oxipay_Oxipayments_Helper</class>
            </oxipayments>
        </helpers>

        <!-- Partial View Controllers -->
        <blocks>
            <oxipayments>
                <!-- <module root>/[Form|Info]/Oxipayments.php -->
                <class>Oxipay_Oxipayments_Block</class>
            </oxipayments>
        </blocks>
        <models>
            <!-- <module root/Model/Paymentmethod.php -->
            <oxipayments>
                <class>Oxipay_Oxipayments_Model</class>
            </oxipayments>
        </models>
        <resources>
            <!-- <module root/sql/oxipayments_setup/install-<version number>.php -->
            <oxipayments_setup>
                <setup>
                    <module>Oxipay_Oxipayments</module>
                </setup>
            </oxipayments_setup>
        </resources>
    </global>
    <!-- End Dependency Injection Configuration -->

    <!-- Payment Method Default Configuration Values -->
    <default>
        <payment>
            <oxipayments>
                <active>1</active>
                <model>oxipayments/paymentmethod</model>
                <order_status>pending</order_status>
                <title>Oxipay</title>
                <allowspecific>0</allowspecific>
                <payment_action>sale</payment_action>
                <gateway_base_url>http://localhost:60343</gateway_base_url>
                <gateway_checkout_url>Checkout/Process?platform=default</gateway_checkout_url>
                <merchant_number>30166666</merchant_number>
                <api_key>TEST</api_key>
                <test_mode>1</test_mode>
            </oxipayments>
        </payment>
    </default>
    <!-- End Payment Method Default Configuration Values -->

    <!-- Routing Configuration -->
    <frontend>
        <routers>
            <oxipayments>
                <use>standard</use>
                <args>
                    <module>Oxipay_Oxipayments</module>
                    <frontName>oxipayments</frontName>
                </args>
            </oxipayments>
        </routers>
    </frontend>
    <!-- End Routing Configuration -->
</config>